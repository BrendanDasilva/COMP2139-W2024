@model Assignment1.Models.FlightBookingViewModel

<h2>Book Flight</h2>

<form asp-controller="FlightBooking" asp-action="Book" method="post">
    <input type="hidden" name="flightId" value="@Model.FlightId" />

    <div class="form-group">
        <label>Airline:</label>
        <input type="text" value="@Model.Airline" readonly class="form-control-plaintext" />
    </div>
    <div class="form-group">
        <label>Departure Airport:</label>
        <input type="text" value="@Model.DepartureAirport" readonly class="form-control-plaintext" />
    </div>
    <div class="form-group">
        <label>Arrival Airport:</label>
        <input type="text" value="@Model.ArrivalAirport" readonly class="form-control-plaintext" />
    </div>
    <div class="form-group">
        <label>Departure Time:</label>
        <input type="text" value="@Model.DepartureTime" readonly class="form-control-plaintext" />
    </div>
    <div class="form-group">
        <label>Arrival Time:</label>
        <input type="text" value="@Model.ArrivalTime" readonly class="form-control-plaintext" />
    </div>
    <div class="form-group">
        <label>Price:</label>
        <input type="text" value="@Model.Price.ToString("C")" readonly class="form-control-plaintext" />
    </div>
    <!-- Customer inputs -->
    <div class="form-group">
        <label for="customerName">Customer Name:</label>
        <input type="text" id="customerName" name="customerName" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="customerEmail">Customer Email:</label>
        <input type="email" id="customerEmail" name="customerEmail" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="bookingDate">Booking Date:</label>
        <input type="text" value="@Model.BookingDate.ToString("MM/dd/yyyy HH:mm:ss tt")" readonly class="form-control-plaintext" />
    </div>
    <div class="form-group">
        <input type="submit" value="Book Now!" class="btn btn-primary" />
    </div>
</form>
